<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WhatsApp Messaging</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <nav class="nav mb-4">
            <a class="nav-link active" href="/">Home</a>
            <a class="nav-link" href="/messages">View Messages</a>
        </nav>

        <div class="row">
            <!-- Send Message Form -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Send Message</h5>
                    </div>
                    <div class="card-body">
                        <form id="sendMessageForm">
                            <div class="mb-3">
                                <label class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" name="phoneNumber" id="phone" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Message</label>
                                <textarea class="form-control" name="message" required></textarea>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Media (Optional)</label>
                                <input type="file" class="form-control" name="media" accept="image/*,video/*,application/pdf">
                            </div>
                            <button type="submit" class="btn btn-primary">Send</button>
                        </form>
                    </div>
                </div>
            </div>
<!--test-->
            <!-- Schedule Message Form -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Schedule Message</h5>
                    </div>
                    <div class="card-body">
                        <form id="scheduleMessageForm">
                            <div class="mb-3">
                                <label class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" name="phoneNumber" id="schedulePhone" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Message</label>
                                <textarea class="form-control" name="message" required></textarea>
                            </div>
							<div class="mb-3">
								<label class="form-label">Media (Optional)</label>
								<input type="file" class="form-control" name="media" id="scheduleMedia" accept="image/*,video/*,application/pdf">
									</div>
                            <div class="mb-3">
                                <label class="form-label">Date</label>
                                <input type="date" class="form-control" name="scheduleDate" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Time</label>
                                <input type="time" class="form-control" name="scheduleTime" required>
                            </div>
                            <button type="submit" class="btn btn-success">Schedule</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recurring Messages Form + Scheduled Messages Table -->
        <div class="row">
            <div class="col-lg-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Recurring Messages</h5>
                    </div>
                    <div class="card-body">
                        <form id="recurringMessageForm">
                            <div class="mb-3">
                                <label class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" name="phoneNumber" id="recurringPhone" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Event Name</label>
                                <input type="text" class="form-control" name="eventName" placeholder="Birthday, Anniversary, etc." required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Date (Recurring Every Year)</label>
                                <input type="date" class="form-control" name="eventDate" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Message</label>
                                <textarea class="form-control" name="message" required></textarea>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Media (Optional)</label>
                                <input type="file" class="form-control" name="media" id="recurringMedia" accept="image/*,video/*,application/pdf">
                            </div>
                            <button type="submit" class="btn btn-info">Save Event</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Scheduled Messages Table -->
            <div class="col-lg-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Scheduled Messages</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                           <table class="table table-striped">
							<thead>
								<tr>
									<th>Phone Number</th>
									<th>Message</th>
									<th>Event</th>
									<th>Schedule</th>
									<th>Status</th>
								</tr>
							</thead>
							<tbody>
									<% if (scheduledMessages.length > 0) { %>
										<% scheduledMessages.forEach(function(schedule) { %>
										<tr>
											<td><%= schedule.phone_number %></td>
											<td><%= schedule.message %></td>
											<td><%= schedule.schedule_time %></td>
											<td><%= schedule.status %></td>
										</tr>
										<% }); %>
									<% } else { %>
										<tr>
											<td colspan="4">No scheduled messages found</td>
										</tr>
									<% } %>
								</tbody>

						</table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
</body>
</html>
